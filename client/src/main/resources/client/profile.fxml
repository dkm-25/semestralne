<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="client.ProfileController"
      spacing="10"
      style="-fx-padding: 20;">

    <Label text="Редагування профілю"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">

        <Label text="Ім'я:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" prefWidth="250"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="E-mail:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" prefWidth="250"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="new password:"
               GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" prefWidth="250"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    </GridPane>

    <HBox spacing="10">
        <Button text="save" onAction="#onSave"/>
        <Button text="close" onAction="#onClose"/>
    </HBox>

</VBox>
